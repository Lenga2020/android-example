<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/short_videos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppShortVideosActivity">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/sv_containers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/sv_nv_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/app_teal_200"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/sv_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/app_white"
            android:text="三个短视频"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="2dp"/>

        <TextView
            android:id="@+id/sv_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/app_white"
            android:text="五个网剧"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="2dp"/>

        <TextView
            android:id="@+id/sv_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/app_white"
            android:text="空白页"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="2dp"/>

        <TextView
            android:id="@+id/sv_tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/app_white"
            android:text="一个短视频"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="2dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>